datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-py"
}

model Log {
    id         Int      @id @default(autoincrement())
    created_at DateTime @default(now())
    sender       String
    message    String
    call_id    Int

    call Call @relation(fields: [call_id], references: [id])
}

model Call {
    id   Int    @id @default(autoincrement())
    sid  String @unique
    incoming String
    logs Log[]
}
